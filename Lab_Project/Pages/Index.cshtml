@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["Session"] = @Model.session;
    ViewData["UserType"] = @Model.userr.role;
}

<main>
    <div class="container-fluid fruite py-5">
        <div class="container py-5">
            <div class="tab-class text-center">

                <div class="row g-4">
                    @{
                        if (Model.session == "1")
                        {


                            <h2>
                                Welcome , @Model.userr.role @Model.name
                            </h2>
                        }
                    }
                    <div class="col-lg-4 text-start">
                        <h1>Projects</h1>                       
                    </div>
                    <div class="col-lg-8 text-end">
                        <ul class="nav nav-pills d-inline-flex text-center mb-5">
                            <li class="nav-item">
                                <button class="btn btn-outline-custom m-2 filter-btn" data-major="All" style="border-radius: 25px">All Majors</button>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-outline-custom m-2 filter-btn" data-major="CIE" style="border-radius: 25px">CIE</button>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-outline-custom m-2 filter-btn" data-major="SPC" style="border-radius: 25px">SPC</button>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-outline-custom m-2 filter-btn" data-major="REE" style="border-radius: 25px">REE</button>
                            </li>
                            <li class="nav-item">
                                <button class="btn btn-outline-custom m-2 filter-btn" data-major="NANENG" style="border-radius: 25px">NANENG</button>
                            </li>
                        </ul>

                    </div>
                </div>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane fade show p-0 active">
                        <div class="row g-4">
                            <div class="col-lg-12">
                                <div class="row g-4">
                                    @{
                                        foreach (System.Data.DataRow row in @Model.dt.Rows)
                                        {
                                            <div class="col-md-6 col-lg-4 col-xl-3" data-major="CIE">
                                                <div class="rounded position-relative">
                                                    <div class="fruite-img">
                                                        <img src="images/P1.jpeg" class="img-fluid w-100 rounded-top" alt="">
                                                    </div>
                                                    <div class="text-white  px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;background-color:#12cad6">CIE</div>
                                                    <div class="p-4  border-top-0 rounded-bottom" style="border: solid 1px #12cad6;">
                                                        <h4>@row[1]</h4>
                                                        <p>@row[2]</p>
                                                        <div class="d-flex justify-content-between flex-lg-wrap">
                                                        <form method="post" >
                                                                <button asp-page-handler="view" asp-route-ID="@row[0]" class="btn btn-outline-custom" style="border-radius: 25px">View more</button>
                                                        </form>
                                                           
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                  

                               
                               
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</main>
   